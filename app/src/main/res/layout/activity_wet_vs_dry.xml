<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WetVsDryActivity"
    android:background="@color/secondaryColor"
    android:paddingHorizontal="20dp"
    android:paddingTop="40dp"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tv_startedSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Started Since: x"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/primaryColor"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_totalWetDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Wet Days: x"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/redColor"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_totalDryDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Dry Days: x"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:textColor="@color/greenColor"
        android:textStyle="italic"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/calendar"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/lv_wetVsDry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_wetVsDryClose"
        android:layout_marginVertical="20dp"
        android:text="Close"
        android:textSize="20sp"
        android:background="@drawable/greyroundedbutton"
        android:textColor="@color/primaryColor"/>


</LinearLayout>