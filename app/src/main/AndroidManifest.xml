<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".FluidReminderActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UDSReminderActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OpenTreasureActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangeRewardsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConsecutiveDryDaysActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WetVsDryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AuthenticationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CaregiverAlarmActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AlarmScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="ALARM_SCREEN_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".PushNotificationsService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".AlarmBuzzerService"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name=".UDSReminderReceiver" />
        <receiver android:name=".FluidReminderReceiver" />
    </application>

</manifest>